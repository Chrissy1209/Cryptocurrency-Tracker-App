{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": ["off"],
        "no-console": "off",
        "react/jsx-filename-extension": "off",
        "no-use-before-define": "off",
        "react/jsx-one-expression-per-line": "off",
        "object-curly-newline": "off",
        "no-nested-ternary": "off",
        "no-else-return": "warn"
    }
}
